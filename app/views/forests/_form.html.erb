<div class="container mt-5 mb-5">
  <%= simple_form_for(@forest) do |f| %>
    <%= f.input :title, placeholder: 'Beatiful Forest' %>
    <%= f.input :description, placeholder: 'Discover my beautiful forest that will fill your heart with love during your rental' %>
    <%= f.input :address, placeholder: '14 rue Crespin du Gast 75011 Paris' %>
    <%= f.input :tree, collection: Forest::TREES %>
    <%= f.input :animals, collection: Forest::ANIMALS %>
    <%= f.input :price, placeholder: 'between 15$ and 250$' %>
    <%= f.input :size, placeholder: '35' %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit class: 'btn btn-outline-success'%>
  <% end %>
</div>
