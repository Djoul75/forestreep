
<div class="d-flex wrapper align-items-start">
  <div class="nav flex-column nav-pills nav-lat" id="v-pills-tab" role="tablist" aria-orientation="vertical">
    <button class="nav-link" id="v-pills-home-tab" data-bs-toggle="pill" data-bs-target="#v-pills-home" type="button" role="tab" aria-controls="v-pills-home" aria-selected="true">
      <h1>My Rentals</h1>
    </button>
    <button class="nav-link active" id="v-pills-profile-tab" data-bs-toggle="pill" data-bs-target="#v-pills-profile" type="button" role="tab" aria-controls="v-pills-profile" aria-selected="false">
      <h1>My Forests</h1>
    </button>
    <button class="nav-link" id="v-pills-messages-tab" data-bs-toggle="pill" data-bs-target="#v-pills-messages" type="button" role="tab" aria-controls="v-pills-messages" aria-selected="false">
      <h1>Notifications</h1>
    </button>
    <button class="nav-link" id="v-pills-settings-tab" data-bs-toggle="pill" data-bs-target="#v-pills-settings" type="button" role="tab" aria-controls="v-pills-settings" aria-selected="false">
      <h1>Messages</h1>
    </button>
  </div>

  <div class="tab-content dashboard-pages" id="v-pills-tabContent">
    <div class="tab-pane fade" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
      <h1>My Rentals:</h1>
    </div>

    <div class="tab-pane fade show active" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
      <h1>My Forests:</h1>
      <% if @forests.length == 0 %>
        <%= link_to 'Add a forest', new_forest_path %>
      <% else %>
        <div class="forests-cards">
          <% @forests.each do |forest| %>

              <div class="forest-card">
                <div class="card-image">
                  <% if forest.photos.first %>
                    <%= cl_image_tag forest.photos.first.key %>
                  <% else %>
                    <%= image_tag 'forests/forest1.jpg'%>
                  <% end %>
                </div>
                <div class="card-infos">
                  <h3><%= forest.title %></h3>
                  <p><%= forest.description %></p>
                  <p><%= forest.address %></p>
                </div>
                <div class="coeur-price">
                  <div class="icons-fa">
                    <%= link_to forest_path(forest) do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to "/forests/#{forest.id}/edit" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to forest_path(forest), method: :delete, data: { confirm: "Are you sure?" }  do %>
                      <i class="fas fa-trash-alt"></i>
                    <% end %>
                  </div>
                  <p><%= forest.price.to_i %>â‚¬ / night</p>
                </div>
              </div>

          <% end %>
        </div>
      <% end %>
    </div>

    <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
      <h1>Notifications</h1>
    </div>

    <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">
      <h1>Messages</h1>
    </div>
  </div>
</div>
